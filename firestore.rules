rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // ==================
    // Helper Functions
    // ==================
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isRole(role) {
      return isSignedIn() && request.auth.token.role == role;
    }

    function isOneOfRoles(roles) {
      return isSignedIn() && request.auth.token.role in roles;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ==================
    // User Profiles
    // ==================
    match /users/{userId} {
      allow read: if isSignedIn();
      allow list: if isRole('Administrador'); // Admins can list users.
      allow create: if isRole('Administrador'); // Only admins can create users via backend.
      allow update: if isOwner(userId) || isRole('Administrador');
      allow delete: if isRole('Administrador');
    }

    // ==================
    // Tickets
    // ==================
    match /tickets/{ticketId} {
      allow get: if isRole('Administrador') || isRole('SST') 
                  || resource.data.requesterId == request.auth.uid
                  || request.auth.uid in resource.data.assignedToIds;
      
      // A user can list tickets, and the client-side query will filter them.
      // The 'get' rule above will secure access to individual documents.
      allow list: if isSignedIn();

      allow create: if isSignedIn();

      allow update: if isRole('Administrador') || 
                     (isRole('Servicios Generales') && request.auth.uid in resource.data.assignedToIds);

      allow delete: if isRole('Administrador');
    }

    // ==================
    // Locations & Categories
    // ==================
    match /zones/{zoneId} {
      allow read: if isSignedIn();
      allow write: if isRole('Administrador');
    }

    match /sites/{siteId} {
      allow read: if isSignedIn();
      allow write: if isRole('Administrador');
    }

    match /categories/{categoryId} {
      allow read: if isSignedIn();
      allow write: if isRole('Administrador');
    }
    
    // ==================
    // Schedule Events
    // ==================
    match /scheduleEvents/{eventId} {
      allow read: if isSignedIn();
      allow list: if isSignedIn();
      allow create, update, delete: if isRole('Administrador');
    }

    // ==================
    // Logs & Notifications (Server-Side Write)
    // ==================
    match /logs/{logId} {
      allow read, list: if isRole('Administrador') || isRole('SST');
      allow create: if false; // Only server can write logs
    }
    
    match /notifications/{notificationId} {
        allow read, update: if isOwner(resource.data.userId);
        allow list: if isSignedIn(); // Filtered by userId on the client.
        allow create: if false; // Only server can write notifications
    }
    
     match /diagnosis_logs/{docId} {
       allow read, write: if isSignedIn();
     }
  }
}
