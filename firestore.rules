rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Función para verificar si el usuario es un administrador
    function isAdmin() {
      return request.auth.token.admin == true;
    }
    
    // Función para verificar si el usuario está autenticado
    function isSignedIn() {
        return request.auth != null;
    }

    // Los administradores tienen acceso completo a toda la base de datos
    match /{document=**} {
      allow read, write: if isAdmin();
    }
    
    // Reglas para los usuarios no administradores
    
    // Colecciones de datos maestros: cualquier usuario autenticado puede leerlas.
    match /zones/{zoneId} {
      allow read: if isSignedIn();
    }
    match /sites/{siteId} {
        allow read: if isSignedIn();
    }
     match /categories/{categoryId} {
        allow read: if isSignedIn();
    }

    // Los usuarios pueden leer y actualizar su propio documento
    match /users/{userId} {
      allow read, update: if isSignedIn() && request.auth.uid == userId;
    }
    
    match /tickets/{ticketId} {
      // Cualquiera puede crear un ticket si está autenticado
      allow create: if isSignedIn();
      // Solo el creador del ticket puede leerlo, o un administrador (ya cubierto arriba)
      allow read: if isSignedIn() && resource.data.requesterId == request.auth.uid;
      // Solo el creador, el personal asignado, o un admin pueden actualizar
      allow update: if isSignedIn() && (resource.data.requesterId == request.auth.uid || request.auth.uid in resource.data.assignedToIds);
    }
    
    match /notifications/{notificationId} {
        // Solo el destinatario de la notificación puede leerla o actualizarla (marcarla como leída)
        allow read, update: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    match /scheduleEvents/{eventId} {
        // Cualquiera puede crear un evento (los administradores o personal asignado lo harán)
        allow create: if isSignedIn();
        // Cualquiera puede leer los eventos del calendario
        allow read: if isSignedIn();
    }
    
    match /logs/{logId} {
        // Solo los administradores pueden leer los logs (ya cubierto por la regla global)
        allow read: if false; 
    }
    
    match /diagnosis_logs/{logId} {
        allow create: if isSignedIn();
    }
  }
}