rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regla simplificada:
    // Permite la lectura y escritura en cualquier documento de la base de datos
    // únicamente si el usuario ha iniciado sesión (está autenticado).
    // Esto es seguro para esta aplicación, ya que no hay acceso anónimo
    // y todos los usuarios son parte de la institución.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
