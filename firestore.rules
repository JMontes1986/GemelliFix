rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuth() && request.auth.token.role == 'Administrador';
    }

    // Allow users to read their own data
    match /users/{userId} {
      allow read: if isAuth() && request.auth.uid == userId;
      allow list, create, update, delete: if isAdmin();
    }

    match /tickets/{ticketId} {
      allow read: if isAuth(); // All authenticated users can read tickets
      allow create: if isAuth();
      allow update: if isAuth() && (isAdmin() || request.auth.uid == resource.data.requesterId || request.auth.uid in resource.data.assignedToIds);
      allow delete: if isAdmin();
    }
    
    match /zones/{zoneId} {
      allow read: if isAuth();
      allow list, create, update, delete: if isAdmin();
    }

    match /sites/{siteId} {
      allow read: if isAuth();
      allow list, create, update, delete: if isAdmin();
    }
    
    match /categories/{categoryId} {
      allow read: if isAuth();
      allow list, create, update, delete: if isAdmin();
    }

    match /notifications/{notificationId} {
        allow read, list, update: if isAuth() && request.auth.uid == resource.data.userId;
        allow create: if isAuth(); // Allow any authenticated user to create (e.g. for system notifications)
    }

    match /scheduleEvents/{eventId} {
        allow read: if isAuth();
        allow create, update, delete: if isAuth() && (isAdmin() || request.auth.uid == resource.data.technicianId);
    }
    
    match /logs/{logId} {
        allow read, list: if isAdmin();
        allow create: if isAuth();
    }
    
     match /diagnosis_logs/{logId} {
        allow read, write: if isAuth();
    }
  }
}
