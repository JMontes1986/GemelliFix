rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper functions
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Users Collection
    match /users/{userId} {
      allow list: if isAdmin();
      allow read: if isAdmin() || request.auth.uid == userId;
      allow create: if request.auth.uid != null;
      allow update: if isAdmin() || request.auth.uid == userId;
    }

    // Tickets Collection
    match /tickets/{ticketId} {
      allow read: if isAdmin() || request.auth.uid == resource.data.requesterId || request.auth.uid in resource.data.assignedToIds;
      allow create: if request.auth.uid != null;
      allow update: if isAdmin() || request.auth.uid in resource.data.assignedToIds;
    }

    // Logs Collection
    match /logs/{logId} {
        allow read, write: if isAdmin();
        allow create: if request.auth.uid != null;
    }
    
    // Notifications Collection
    match /notifications/{notificationId} {
        allow read, write: if isAdmin() || request.auth.uid == resource.data.userId;
    }
    
    // Schedule Events Collection
    match /scheduleEvents/{eventId} {
      allow read: if request.auth != null;
      allow create, update, delete: if isAdmin() || request.auth.uid == resource.data.technicianId;
    }

    // Diagnosis Logs Collection (for testing)
    match /diagnosis_logs/{logId} {
        allow read, write: if request.auth != null;
    }
    
    // Master Data Collections (Zones, Sites, Categories)
    match /zones/{zoneId} {
        allow read, write: if isAdmin();
        allow list: if request.auth != null;
    }
    match /sites/{siteId} {
        allow read, write: if isAdmin();
        allow list: if request.auth != null;
    }
    match /categories/{categoryId} {
        allow read, write: if isAdmin();
        allow list: if request.auth != null;
    }
  }
}
