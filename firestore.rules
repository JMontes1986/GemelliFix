
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for Admin role via custom claims
    function isAdmin() {
      return request.auth.token.admin == true;
    }
    
    // Helper function to check if the user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Global rule for Admin: Full access to everything
    match /{document=**} {
      allow read, write: if isAdmin();
    }

    // Users can only read/update their own profile.
    // Admins have full access from the global rule.
    match /users/{userId} {
      allow read, update: if isOwner(userId);
    }
    
    // Rules for Tickets
    match /tickets/{ticketId} {
      // Users can create tickets
      allow create: if isSignedIn();
      // Users can read tickets they created or are assigned to.
      // Admins can read all tickets.
      allow read: if isOwner(resource.data.requesterId) || request.auth.uid in resource.data.assignedToIds;
      // Users can update tickets they created or are assigned to.
      // Admins can update all tickets.
      allow update: if isOwner(resource.data.requesterId) || request.auth.uid in resource.data.assignedToIds;
    }
    
    // Notifications can only be read/updated by the recipient.
    // Admins have full access.
    match /notifications/{notificationId} {
      allow read, update: if isOwner(resource.data.userId);
      // Anyone signed in can create a notification (actions are controlled by backend logic)
      allow create: if isSignedIn();
    }

    // General Staff and Admins can manage schedule events
    match /scheduleEvents/{eventId} {
      allow read, write: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Servicios Generales';
    }

    // Only Admins can read system logs
    match /logs/{logId} {
      allow read: if isAdmin();
    }
    
    // Any authenticated user can write to the diagnosis logs collection for testing.
    match /diagnosis_logs/{logId} {
      allow create: if isSignedIn();
    }
    
    // Any authenticated user can read zones and sites, only admins can write.
    match /zones/{zoneId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /sites/{siteId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
  }
}
