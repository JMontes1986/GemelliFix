rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para la colección de usuarios
    match /users/{userId} {
      // SOLO los administradores pueden listar todos los usuarios o actualizar perfiles.
      allow list: if request.auth.token.admin == true;
      allow update: if request.auth.token.admin == true || request.auth.uid == userId;

      // CUALQUIER usuario autenticado puede leer un perfil individual (get).
      allow get: if request.auth != null;

      // Un usuario solo puede crear su propio documento.
      allow create: if request.auth.uid == userId;
    }
    
    // Reglas para la colección de tickets
    match /tickets/{ticketId} {
        // CUALQUIER usuario autenticado puede leer los tickets (necesario para el dashboard).
        allow read: if request.auth != null;
        
        // SOLO los administradores o el solicitante pueden actualizar un ticket.
        allow update: if request.auth.token.admin == true || request.auth.uid == resource.data.requesterId;
        
        // CUALQUIER usuario autenticado puede crear un ticket.
        allow create: if request.auth != null;
    }
    
    // Reglas para las colecciones de zonas y sitios (solo lectura para usuarios autenticados)
    match /zones/{zoneId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }
    
    match /sites/{siteId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.admin == true;
    }
    
    // Reglas para la colección de logs (creación para cualquiera, lectura solo para admins)
    match /logs/{logId} {
      allow read: if request.auth.token.admin == true;
      allow create: if request.auth != null;
    }
    
    // Reglas para la colección de notificaciones
    match /notifications/{notificationId} {
        // Los usuarios solo pueden ver y modificar sus propias notificaciones.
        allow read, update, delete: if request.auth.uid == resource.data.userId;
        
        // Cualquiera puede crear una notificación (la lógica de la app asigna el userId correcto).
        allow create: if request.auth != null;
    }

    // Reglas para la colección de eventos del calendario
    match /scheduleEvents/{eventId} {
        allow read: if request.auth != null;
        allow write: if request.auth.token.admin == true || request.auth.uid == request.resource.data.technicianId;
    }

    // Regla para la colección de diagnóstico
    match /diagnosis_logs/{logId} {
        allow create: if request.auth != null;
        allow read: if request.auth.token.admin == true;
    }
  }
}
