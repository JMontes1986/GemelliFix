rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAdmin() {
      return request.auth != null && request.auth.token.role == 'Administrador';
    }
    
    function isSST() {
      return request.auth != null && request.auth.token.role == 'SST';
    }

    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if request.auth.uid == userId || isAdmin();
    }

    match /tickets/{ticketId} {
      allow read: if request.auth.uid == resource.data.requesterId || isAdmin() || isSST();
      allow list: if isAdmin() || isSST() || (request.query.get("requesterId") == request.auth.uid);
      allow create: if request.auth != null;
      allow update: if isAdmin() || (request.auth.uid == resource.data.requesterId) || (request.auth.uid in resource.data.assignedToIds);
      allow delete: if isAdmin();
    }

    match /notifications/{notificationId} {
      allow read, list: if request.auth.uid == resource.data.userId;
      allow update: if request.auth.uid == resource.data.userId;
    }
    
    match /zones/{zoneId} {
        allow read: if request.auth != null;
        allow list: if request.auth != null;
        allow create, update, delete: if isAdmin();
    }
    
    match /sites/{siteId} {
        allow read: if request.auth != null;
        allow list: if request.auth != null;
        allow create, update, delete: if isAdmin();
    }

    match /categories/{categoryId} {
        allow read: if request.auth != null;
        allow list: if request.auth != null;
        allow create, update, delete: if isAdmin();
    }

    match /scheduleEvents/{eventId} {
      allow read, list: if request.auth != null;
      allow create, update, delete: if isAdmin() || request.auth.uid == resource.data.technicianId;
    }
    
    match /logs/{logId} {
        allow list, read: if isAdmin() || isSST();
        allow create: if request.auth != null;
    }
    
    match /diagnosis_logs/{logId} {
      allow create: if request.auth != null;
    }
  }
}
