
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // =================================
    // Users Collection
    // =================================
    match /users/{userId} {
      // Anyone can read user profiles (for names, avatars, roles)
      allow read: if true;
      // Only the authenticated user can create or update their own document
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // =================================
    // Tickets Collection
    // =================================
    match /tickets/{ticketId} {
      // Allow any authenticated user to create a ticket
      allow create: if request.auth != null;

      // Allow read/write based on roles and ownership
      allow read, update: if 
          request.auth != null && (
            // The user who created the ticket
            resource.data.requesterId == request.auth.uid ||
            // A technician assigned to the ticket
            (resource.data.assignedToIds != null && request.auth.uid in resource.data.assignedToIds) ||
            // An administrator
            get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Administrador'
          );
    }
    
    // =================================
    // Notifications Collection
    // =================================
    match /notifications/{notificationId} {
        // Allow a user to read/update their own notifications
        allow read, update, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        // Admins can read all notifications for auditing
        allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Administrador';
    }

    // =================================
    // Logs Collection
    // =================================
    match /logs/{logId} {
        // Only authenticated users can create logs
        allow create: if request.auth != null;
        // Nobody can update or delete logs to ensure audit trail integrity
        allow update, delete: if false;
        // Only admins can read the logs
        allow read, list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Administrador';
    }
    
    // =================================
    // Diagnosis Logs (for testing)
    // =================================
    match /diagnosis_logs/{logId} {
        // Allow any authenticated user to create test logs
        allow create: if request.auth != null;
        // These are for testing, so allow read for admins if needed
        allow read: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Administrador';
    }
  }
}
