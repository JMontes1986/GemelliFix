
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check for admin role
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Users can read/update their own profile.
    // Admins can read/update/list all profiles.
    match /users/{userId} {
      allow read: if request.auth.uid == userId || isAdmin();
      allow list: if isAdmin();
      allow create, update: if request.auth.uid == userId || isAdmin();
    }
    
    // Tickets:
    // - Requesters can create tickets.
    // - Requesters can read/update their OWN tickets (until assigned).
    // - Assigned techs can read/update tickets assigned to them.
    // - Admins have full access.
    match /tickets/{ticketId} {
      allow create: if request.auth.uid != null;
      allow read: if isAdmin() || request.auth.uid == resource.data.requesterId || request.auth.uid in resource.data.assignedToIds;
      allow list: if isAdmin() || request.auth.uid != null; // Allow logged-in users to list their own tickets
      allow update: if isAdmin() || request.auth.uid == resource.data.requesterId || request.auth.uid in resource.data.assignedToIds;
      allow delete: if isAdmin();
    }

    // Anyone authenticated can read zones, sites, categories (master data).
    // Only admins can modify them.
    match /zones/{zoneId} {
      allow read: if request.auth.uid != null;
      allow write: if isAdmin();
    }
    match /sites/{siteId} {
      allow read: if request.auth.uid != null;
      allow write: if isAdmin();
    }
    match /categories/{categoryId} {
      allow read: if request.auth.uid != null;
      allow write: if isAdmin();
    }
    
    // Notifications can only be read/updated by the target user or admin.
    match /notifications/{notificationId} {
      allow read, update, delete: if isAdmin() || request.auth.uid == resource.data.userId;
      allow create: if request.auth.uid != null;
    }
    
    // Schedule Events:
    // - Admins can read/write all events.
    // - Assigned techs can read events assigned to them.
    match /scheduleEvents/{eventId} {
      allow read, list: if isAdmin() || request.auth.uid == resource.data.technicianId;
      allow create, update, delete: if isAdmin();
    }

    // Logs can only be written by authenticated users (via backend logic).
    // Only admins can read the full log collection.
    match /logs/{logId} {
      allow read: if isAdmin();
      allow create: if request.auth.uid != null;
    }
    
     match /diagnosis_logs/{logId} {
      allow read, write: if request.auth.uid != null;
    }
  }
}

    