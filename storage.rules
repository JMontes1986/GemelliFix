rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Rules for ticket attachments and evidence
    // Allow any authenticated user to upload attachments and evidence
    match /{folder}/{ticketId}/{fileName}
      where folder == 'ticket-attachments' || folder == 'ticket-evidence' {
      allow read, write: if request.auth != null;
    }

     // Public read for the logo
    match /Logo.png {
      allow read;
    }
  }
}
