rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite la lectura de todos los archivos para que las im√°genes puedan ser vistas.
    match /{allPaths=**} {
      allow read;
    }

    // Permite a un usuario escribir (subir, actualizar, eliminar) solo en su propia carpeta de avatares.
    // Esto asegura que un usuario no pueda modificar la foto de perfil de otro.
    match /avatars/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Reglas para adjuntos de tickets
    match /ticket-attachments/{allPaths=**} {
      allow write: if request.auth != null;
    }

    // Reglas para evidencia de tickets
    match /ticket-evidence/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
