rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Reglas para los avatares de usuario
    match /avatars/{userId}/{allPaths=**} {
      // Permite la lectura a cualquiera para poder ver las fotos de perfil
      allow read;
      
      // Permite la escritura (subir, actualizar, borrar) solo si el
      // usuario autenticado es el due√±o de esa carpeta de avatar.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regla general para otros archivos (si los hubiera en el futuro)
    // Por defecto, se deniega el acceso a menos que se especifique lo contrario.
    match /{allPaths=**} {
      allow read: if false; // Denegar lectura por defecto
      allow write: if false; // Denegar escritura por defecto
    }
  }
}
