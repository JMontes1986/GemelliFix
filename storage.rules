
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Reglas para avatares de usuario
    match /avatars/{userId}/{allPaths=**} {
      // Cualquiera puede leer un avatar
      allow read;
      
      // Solo el propio usuario o un administrador puede escribir/actualizar su avatar
      allow write: if request.auth != null && 
                     (request.auth.uid == userId || 
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Administrador');
    }

    // Reglas para adjuntos de tickets
    match /ticket-attachments/{ticketId}/{fileName} {
      // Un usuario autenticado puede crear (subir) adjuntos.
      allow create: if request.auth != null;
      
      // Solo usuarios autenticados pueden leer. Se podría restringir más si fuera necesario.
      allow read: if request.auth != null; 
      
      // Nadie puede actualizar o eliminar directamente, para mantener la integridad.
      allow update, delete: if false;
    }

    // Reglas para evidencia de tickets
    match /ticket-evidence/{ticketId}/{fileName} {
      // Un usuario autenticado puede subir evidencia.
      allow create: if request.auth != null;
      
      // Solo usuarios autenticados pueden leer.
      allow read: if request.auth != null;
      
      // Nadie puede actualizar o eliminar directamente.
      allow update, delete: if false;
    }

    // Regla para el logo de la aplicación
    match /Logo.png {
      allow read; // Permitir lectura pública para el logo
    }
  }
}
