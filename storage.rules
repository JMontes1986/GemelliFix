rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check for Admin role via custom claims
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Avatars:
    // - Anyone can read any avatar.
    // - An admin can write to any user's avatar.
    // - A user can only write to their own avatar.
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }

    // Ticket Attachments & Evidence:
    // - Only authenticated users can upload.
    // - Reading is more complex and should be handled via download URLs generated by the app,
    //   where access is checked against Firestore ticket data (requester, assignee, admin).
    match /ticket-attachments/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    match /ticket-evidence/{allPaths=**} {
       allow write: if request.auth != null;
    }
  }
}
