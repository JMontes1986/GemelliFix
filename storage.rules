rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read and write access for any file if the user is authenticated.
    // The security is handled by the unguessable download URLs, which are only
    // accessible to users who have access to the corresponding ticket in Firestore.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
